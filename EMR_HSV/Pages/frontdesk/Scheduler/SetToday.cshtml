@page
@model EMR_HSV.Pages.frontdesk.Scheduler.SetTodayModel
@{
}


"Today" is: @Models.DayTracker.Today.Date.ToString("d")

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="TodaysDate" class="control-label">Date: </label>
                <input asp-for="TodaysDate" value="@DateTime.Now.ToString("dddd, dd MMMM yyyy")" class="form-control" />
                <span asp-validation-for="TodaysDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Change Today's date" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>