@page
@model EMR_HSV.Pages.frontdesk.Insurances.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="jumbotron">
    <h1 class="text-center">Insurance Directory</h1>
    <h3 class="text-center">Delete</h3>
</div>

<h3 class="text-center">Are you sure you want to delete this contact?</h3>
<form method="post" class="text-center">
    <input type="hidden" asp-for="Insurance.Id" />
    <input type="submit" value="Yes" class="btn btn-success" /> |
    <a asp-page="./Index" class="btn btn-danger">No</a>
</form>
<div class="container-md">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Name:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Patient.FullName)
        </dd>
        <dt class="col-sm-2">
            Insurance Provider:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Name)
        </dd>
        <dt class="col-sm-2">
            Contract Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.ContractNumber)
        </dd>
        <dt class="col-sm-2">
            Group Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.WorkNumber)
        </dd>
        <dt class="col-sm-2">
            Address:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Address)
        </dd>
        <dt class="col-sm-2">
            Contact Number:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Contact)
        </dd>
        <dt class="col-sm-2">
            Co-pay:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.Copay)
        </dd>
        <dt class="col-sm-2">
            Effective Date:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Insurance.EffectiveDate)
        </dd>
    </dl>

</div>
