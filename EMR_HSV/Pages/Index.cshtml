@page
@model IndexModel
@using EMR_HSV.Util

@{
    ViewData["Title"] = "Home page";
}

<body>
    <div class="row">
        <div class="col-md-12">
            <div class="jumbotron">
                <h3 class="text-center">
                    EMR Patient Portal
                </h3>
            </div>
        </div>
    </div>
    <h3 class="text-center"> @Models.DayTracker.Today.ToString("dddd, dd MMMM yyyy")</h3>
    <div class="text-center"><a href="frontdesk/Scheduler/SetToday" class="text-center">Select different day</a></div>
    
    <div class="container-fluid text-center">
        <table class="table table-hover text-centered">
            <thead>
                <tr>
                    <th>
                        Patient Name
                    </th>
                    <th>
                        Appointment Date
                    </th>
                    @*<th>
                             Appointment Time
                         </th>
                        <th></th>*@
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Appointment)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Patient.FullName)
                        </td>
                     
                        <td> @* Armando - I made this only show time bc it seemed redundant to display date here. -Tyler *@
                            Time: @Util.ConverTime(item.ArrivalTime)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>